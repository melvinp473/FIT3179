{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Heatmap of overseas students by year and state.",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/melvinp473/FIT3179/refs/heads/main/data/heatmap_data.csv"
    },
    "mark": "rect",
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "title": "Year"
      },
      "y": {
        "field": "state",
        "type": "nominal",
        "title": "State"
      },
      "color": {
        "field": "students",
        "type": "quantitative",
        "title": "Students",
        "scale": {
          "scheme": "viridis"
        }
      },
      "tooltip": [
        {"field": "state", "type": "nominal", "title": "State"},
        {"field": "year", "type": "ordinal", "title": "Year"},
        {"field": "students", "type": "quantitative", "title": "Students"}
      ]
    },
    "config": {
      "axis": {
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    }
  }
  