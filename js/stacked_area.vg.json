{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Proportion of Enrolments by School Affiliation, Australia, 2006 to 2023",
    "width": 700,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/melvinp473/FIT3179/refs/heads/main/data/area_data.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "fold": [
                "government",
                "catholic",
                "independent"
            ],
            "as": [
                "School Affiliation",
                "Percentage"
            ]
        },
        {
            "lookup": "School Affiliation",
            "from": {
                "data": {
                    "values": [
                        {
                            "School Affiliation": "government",
                            "Title Case": "Government"
                        },
                        {
                            "School Affiliation": "catholic",
                            "Title Case": "Catholic"
                        },
                        {
                            "School Affiliation": "independent",
                            "Title Case": "Independent"
                        }
                    ]
                },
                "key": "School Affiliation",
                "fields": [
                    "Title Case"
                ]
            }
        },
        {
            "calculate": "datum.Percentage + '%'",
            "as": "PercentageWithSymbol"
        }
    ],
    "mark": "area",
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal",
            "timeUnit": "year",
            "title": null
        },
        "y": {
            "field": "Percentage",
            "type": "quantitative",
            "stack": "normalize",
            "title": null
        },
        "color": {
            "field": "Title Case",
            "type": "nominal",
            "title": "School Affiliation",
            "sort": [
                "Independent",
                "Catholic",
                "Government"
            ],
            "scale": {
                "range": [
                    "#6baed6",
                    "#2171b5",
                    "#08306b"
                ]
            }
        },
        "order": {
            "field": "null"
        },
        "tooltip": [
            {
                "field": "Title Case",
                "type": "nominal",
                "title": "School Affiliation"
            },
            {
                "field": "year",
                "type": "temporal",
                "timeUnit": "year",
                "title": "Year"
            },
            {
                "field": "PercentageWithSymbol",
                "type": "nominal",
                "title": "Percentage"
            }
        ]
    },
    "config": {
        "font": "Montserrat",
        "axis": {
            "labelFont": "Montserrat",
            "titleFont": "Montserrat"
        },
        "legend": {
            "labelFont": "Montserrat",
            "titleFont": "Montserrat"
        }
    }
}
